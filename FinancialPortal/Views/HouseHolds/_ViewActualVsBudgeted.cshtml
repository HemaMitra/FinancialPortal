@model FinancialPortal.Models.ActualVcBudgetedViewModel

@{
    ViewBag.Title = "Actual VS Budgeted";
}

<div class="smart-widget">
    <div class="smart-widget-header">
        Actual Vs Budgeted Income / Expense for the current month
        <span class="smart-widget-option">
            <a href="#" class="widget-collapse-option" data-toggle="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
        </span>
    </div>
    <div class="smart-widget-inner">
        <div class="smart-widget-body">
            <div>
                <table class="table table-border">
                    <tr class="font-semi-bold">
                        <td class="table-padding">Actual / Budgeted Income</td>
                        <td>Actual / Budgeted Expense</td>
                    </tr>   
                        <tr>
                            <td>@Html.DisplayFor(model => model.ActualInc) / @Html.DisplayFor(model => model.BudgetInc)</td>
                            <td>@Html.DisplayFor(model => model.ActualExp) / @Html.DisplayFor(model => model.BudgetExp)</td>
                        </tr>
                </table>
            </div>
        </div>
    </div>
</div>
