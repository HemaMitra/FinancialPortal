@model FinancialPortal.Models.Category

@{
    ViewBag.Title = "Details";
}

<h4>Category Details</h4>
<div class="smart-widget">
    <div class="smart-widget-header">
        Details
        <span class="smart-widget-option">
            <a href="#" class="widget-collapse-option" data-toggle="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
        </span>
    </div>
    <div class="smart-widget-inner">
        <p class="smart-widget-body">
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        Category Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>

                </dl>
            </div>

            
                <p class="left-padding">
                    <a href="@Url.Action("Edit", "Categories", new { id = Model.CategoryId })" class="btn btn-rounded back-color text-white">Edit</a>
                    <a href="@Url.Action("Index", "Categories")" class="btn btn-rounded text-white back-color">Back</a>
                </p>

       </div>
     </div>
</div>



