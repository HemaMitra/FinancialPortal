@model FinancialPortal.Models.IncomeExpenseViewModel

<br>

<div class="row">
    <div class="col-md-7 col-sm-7">
<div class="smart-widget">
    <div class="smart-widget-header">
        Budgeted Income/Expense for @Model.HouseHoldName Household
        <span class="smart-widget-option">
            <a href="#" class="widget-collapse-option" data-toggle="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
        </span>
    </div>
    <div class="smart-widget-inner">
        <div class="smart-widget-body">
            <table class="table">
                <tr class="strong">
                    <td class="table-padding">Date</td>
                    <td>Income</td>
                    <td>Expense</td>
                    <td>Balance</td>
                </tr>
                <tr>
                    <td>@Model.Date.ToString("MMM dd, yyyy")</td>
                    <td>@Model.income</td>
                    <td>@Model.expense</td>
                    @if (Model.balance <= 500)
                    {
                        <td class="text-danger">@Model.balance</td>
                    }
                    else
                    { 
                        <td>@Model.balance</td>
                    }
                </tr>
            </table>
        </div>
    </div>
</div>
        </div>
    </div>

