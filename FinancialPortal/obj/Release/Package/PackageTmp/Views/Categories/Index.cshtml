@model IEnumerable<FinancialPortal.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h4>Categories</h4>

<p>
    <a href="@Url.Action("Create","Categories")" class="btn btn-rounded back-color text-white">Create New</a>
    <H4 class="text-danger"><strong>@TempData["Warning"]</strong></h4>
</p>
<table id="tabData" class="table">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th></th>
    </tr>
    </thead>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Categories", new { id = item.CategoryId })" class="btn btn-sm btn-rounded back-color text-white">
                <i class="fa fa-edit" title="Edit"></i>
            </a>

            <a href="@Url.Action("Delete", "Categories", new { id = item.CategoryId })" class="btn btn-sm btn-rounded back-color text-white">
                <i class="fa fa-trash-o" title="Delete"></i>
            </a>

        </td>
    </tr>
}

</table>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabData').DataTable();
        });

    </script>
}