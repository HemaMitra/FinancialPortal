@model FinancialPortal.Models.Transaction

@{
    ViewBag.Title = "Delete";
}

<h4>Delete Transaction</h4>
<h4 class="text-danger">Are you sure you want to delete this transaction ?</h4>

<div class="smart-widget">
    <div class="smart-widget-header">
        Widget
        <span class="smart-widget-option">
            <a href="#" class="widget-collapse-option" data-toggle="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
        </span>
    </div>
    <div class="smart-widget-inner">
        <div class="smart-widget-body">
            <div>


                <table class="table">
                    <tr class="strong">
                        <td>Account Name</td>
                        <td>Category</td>
                        <td>Is Withdrawl ?</td>
                        <td>Amount</td>
                        <td>Reconcialiation Amount</td>
                        <td>Transaction Date</td>
                        <td>Description</td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.BankAccount.AccountName)
                        </td>


                        
                        <td>
                            @Html.DisplayFor(model => model.Category.CategoryName)
                        </td>


                        <td>
                            @Html.DisplayFor(model => model.IsWithdrawl)
                        </td>


                        <td>
                            @Html.DisplayFor(model => model.TransactionAmount)
                        </td>


                        <td>
                            @Html.DisplayFor(model => model.ReconciliationAmount)
                        </td>

                        <td>
                            @Model.TransactionDate.ToString("MMM dd, yyyy")
                        </td>


                        <td>
                            @Html.DisplayFor(model => model.TransactionDescription)
                        </td>

                    </tr>
                </table>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-rounded text-white back-color" />
                        <a href="@Url.Action("Index", "Transactions", new { BankAccountId = Model.BankAccountId })" class="btn btn-rounded text-white back-color">Back</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





