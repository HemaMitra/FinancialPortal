@model FinancialPortal.Models.BankAccount

@{
    ViewBag.Title = "Details";
}

<h4>Account Details for @Model.AccountName</h4>


<div class="smart-widget">
    <div class="smart-widget-header">
        Account Details
        <span class="smart-widget-option">
            <a href="#" class="widget-collapse-option" data-toggle="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
        </span>
    </div>
    <div class="smart-widget-inner">
        <div class="smart-widget-body">
            <div>
                <table class="table">
                    <tr class="font-semi-bold">
                        <td>
                            @Html.DisplayNameFor(model => model.HouseHold.HouseHoldName)
                        </td>

                        <td>
                            @Html.DisplayNameFor(model => model.AccountName)
                        </td>


                        
                        <td>
                            @Html.DisplayNameFor(model => model.Balance)
                        </td>


                        <td>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </td>
                        <td class="font-14">
                            View Transactions
                        </td>

                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.HouseHold.HouseHoldName)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.AccountName)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.Balance)
                        </td>

                        <td>
                            @Model.CreatedDate.ToString("MMM dd, yyyy")
                        </td>
                        <td>
                            <a href="@Url.Action("Index", "Transactions", new { BankAccountId = Model.BankAccountId })" class="btn btn-sm btn-rounded back-color text-white">
                            <i class="fa fa-arrows-h" title="View Transactions"></i>
                            </a>
                        </td>
                    </tr>
                </table>
            </div>

        </div>
    </div>
</div>




<div class="row">
    <div class="col-md-5 col-xs-5">
    <a href="@Url.Action("Edit", "BankAccounts", new { id = Model.BankAccountId })" class="btn btn-rounded back-color text-white">Edit</a>
    <a href="@Url.Action("Index","BankAccounts")" class="btn btn-rounded text-white back-color">Back</a>
    </div>
</div>
<br>
