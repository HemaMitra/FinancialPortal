@model FinancialPortal.Models.BankAccount

@{
    ViewBag.Title = "Delete";
}

<h4>Delete Account @Model.AccountName</h4>

<div class="smart-widget">
    <div class="smart-widget-header">
        Delete Account
        <span class="smart-widget-option">
            <a href="#" class="widget-collapse-option" data-toggle="collapse">
                <i class="fa fa-chevron-up"></i>
            </a>
        </span>
    </div>
    <div class="smart-widget-inner">
        <div class="smart-widget-body">
            <div>
                <h4>Are you sure you want to delete this account ?</h4>
                <table class="table">
                    <tr class="font-semi-bold">
                    <td>
                        @Html.DisplayNameFor(model => model.HouseHold.HouseHoldName)
                    </td>


                    <td>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </td>


                    @*<td>
                        @Html.DisplayNameFor(model => model.TransactionId)
                    </td>*@


                    <td>
                        @Html.DisplayNameFor(model => model.Balance)
                    </td>


                    <td>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </td>

                    @*<td>
                        @Html.DisplayNameFor(model => model.UpdateDate)
                    </td>*@

                    
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.HouseHold.HouseHoldName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.AccountName)
                    </td>

                    @*<td>
                        @Html.DisplayFor(model => model.TransactionId)
                    </td>*@

                    <td>
                        @Html.DisplayFor(model => model.Balance)
                    </td>

                    <td>
                        @*@Html.DisplayFor(model => model.CreatedDate)*@
                        @Model.CreatedDate.ToString("MMM dd, yyyy")
                    </td>

                    @*<td>
                        @Html.DisplayFor(model => model.UpdateDate)
                    </td>*@

                </tr>
            </table>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-rounded text-white back-color" />
                        <a href="@Url.Action("Index","BankAccounts")" class="btn btn-rounded text-white back-color">Back</a>
                        @*@Html.ActionLink("Back to List", "Index")*@
                    </div>
                }
            </div>

        </div>
    </div>
</div>
